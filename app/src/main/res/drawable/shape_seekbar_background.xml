<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="10dp" android:layout_height="10dp">

    <item android:id="@+id/progress_fill" >

        <shape android:shape="rectangle" >
            <size
                android:width="@dimen/thumb_width"
                android:height="@dimen/thumb_height"
                />
            <corners android:radius="50dp"/>
            <gradient android:angle="90"
                android:endColor="#0D000000" android:centerColor="#1A000000" android:startColor="#26000000" />
        </shape>
    </item>
    <item
        android:id="@+id/prog"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <size
                android:width="@dimen/thumb_width"
                android:height="@dimen/thumb_height"
                />
            <gradient android:angle="90"
                android:endColor="#FAFAFA" android:centerColor="#F5F5F5" android:startColor="#EEEEEE" />
            />
        </shape>
    </item>

</layer-list>

